<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gestiodonto.EditarPaciente" >

    
     <ScrollView 
         android:layout_width="fill_parent" 
         android:layout_height="wrap_content">
     
         
           <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

               
               <EditText
        		android:id="@+id/cedula_editar"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_alignParentTop="true"
        		android:layout_centerHorizontal="true"
        		android:ems="10"
        		android:hint="Cédula"
        		android:inputType="textPersonName" >
	
    		    	<requestFocus />
    			</EditText>
    
               
               <EditText
        		android:id="@+id/nombre_editar"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_alignLeft="@+id/cedula_crear"
        		android:layout_below="@+id/cedula_crear"
        		android:ems="10"
        		android:inputType="textPersonName"
        		android:hint="Nombre"  />
	
    		   <EditText
        		android:id="@+id/apellido1_editar"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content" 
        		android:ems="10"
        		android:inputType="textPersonName"
        		android:hint="Apellido 1"  />

    		   <EditText
        		android:id="@+id/apellido2_editar"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content" 
        		android:ems="10"
		        android:inputType="textPersonName"
        		android:hint="Apellido 2" />

    		   <EditText
        		android:id="@+id/telefono_editar"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content" 
        		android:ems="10"
        		android:inputType="textPersonName"
        		android:hint="Telefono"/>
	    
    		   <EditText
        		android:id="@+id/fechanac_editar"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content" 
		        android:ems="10"
		        android:hint="Fecha de Nacimiento dd/mm/yyyy "
		        android:inputType="phone" 
		        android:digits="1234567890/" />
		
    		   <EditText
        		android:id="@+id/expediente_editar"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content" 
        		android:ems="10"
        		android:inputType="textPersonName"
        		android:hint="Expediente" />
	    
    		   <EditText
        		android:id="@+id/direccion_editar"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_alignLeft="@+id/expediente_crear"
        		android:layout_below="@+id/expediente_crear"
        		android:ems="10"
		        android:inputType="textMultiLine"
         		android:hint="Dirección"  />

		       <Button
		           android:id="@+id/editar_Paciente_btn"
		           style="@style/TextAppearance.AppCompat.Widget.PopupMenu.Large"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:background="@android:color/transparent"
		           android:text="Editar" />

		       <Button
		           android:id="@+id/cancel_editar_paciente"
		           style="?android:attr/buttonStyleSmall"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:text="Cancelar" />
	
        </TableLayout>
        
 	</ScrollView>

</RelativeLayout>
